[% INCLUDE 'doc-head-open.inc' %]
<title>Koha: AACR2 MARC21 Intellisense + Guardrails</title>
[% INCLUDE 'doc-head-close.inc' %]
[% INCLUDE 'calendar.inc' %]
<style>
    :root {
        --aacr2-accent: #0c223f;
        --aacr2-accent-soft: #e7eef7;
        --aacr2-border: #d7dde6;
        --aacr2-surface: #f4f7fb;
        --aacr2-card: #ffffff;
        --aacr2-muted: #5b6b7c;
        --aacr2-shadow: 0 8px 18px rgba(15, 23, 42, 0.08);
    }
    .configuration-section {
        background: var(--aacr2-card);
        border: 1px solid var(--aacr2-border);
        border-radius: 8px;
        margin-bottom: 24px;
        box-shadow: var(--aacr2-shadow);
    }
    .configuration-section legend {
        background: var(--aacr2-accent);
        color: white;
        padding: 8px 16px;
        border-radius: 8px 8px 0 0;
        margin: 0;
        width: 100%;
        font-size: 13px;
        letter-spacing: 0.3px;
        text-transform: uppercase;
    }
    .configuration-section .rows {
        padding: 18px 18px 12px 18px;
        margin: 0;
    }
    .configuration-section .rows > li {
        padding: 8px 0;
    }
    .configuration-section .rows p {
        margin: 0 0 8px;
    }
    .configuration-section .rows ul {
        margin: 8px 0 8px 18px;
        padding-left: 18px;
    }
    .hint {
        color: var(--aacr2-muted);
        font-size: 12px;
        font-style: normal;
        display: block;
        margin-top: 3px;
    }
    .alert-success {
        background: #dff0d8;
        border: 1px solid #d6e9c6;
        color: #3c763d;
        padding: 10px;
        border-radius: 4px;
    }
    .label-success {
        background-color: #5cb85c;
        color: white;
        padding: 2px 6px;
        border-radius: 3px;
        font-weight: bold;
    }
    .label-danger {
        background-color: #d9534f;
        color: white;
        padding: 2px 6px;
        border-radius: 3px;
        font-weight: bold;
    }
    .label-warning {
        background-color: #f0ad4e;
        color: white;
        padding: 2px 6px;
        border-radius: 3px;
        font-weight: bold;
    }
    .label-default {
        background-color: #777;
        color: white;
        padding: 2px 6px;
        border-radius: 3px;
        font-weight: bold;
    }
    .field-table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
        background: var(--aacr2-card);
        border: 1px solid var(--aacr2-border);
        border-radius: 8px;
        overflow: hidden;
    }
    .field-table th, .field-table td {
        padding: 8px 12px;
        font-size: 14px;
        color: #333;
        border: 1px solid var(--aacr2-border);
    }
    .field-table th {
        background: var(--aacr2-surface);
        font-weight: bold;
    }
    .punctuation-field-example {
        font-family: monospace;
        background: var(--aacr2-surface);
        padding: 3px 6px;
        border: 1px solid var(--aacr2-border);
        border-radius: 4px;
    }
    .action {
        margin-top: 15px;
    }
    .action .btn {
        margin-right: 8px;
    }
    .status-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 10px;
    }
    .status-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        padding: 8px 10px;
        background: var(--aacr2-surface);
        border: 1px solid var(--aacr2-border);
        border-radius: 6px;
    }
    .status-label {
        font-size: 11px;
        letter-spacing: 0.3px;
        text-transform: uppercase;
        color: var(--aacr2-muted);
        font-weight: 600;
    }
    .status-value {
        color: #333;
        font-weight: 600;
    }
    .status-value a {
        word-break: break-all;
    }
    .warning-text {
        color: red;
        font-weight: bold;
    }
</style>
</head>
<body>
[% INCLUDE 'header.inc' %]
[% INCLUDE 'cat-search.inc' %]
<div id="breadcrumbs">
    <div class="container">
        <a href="/cgi-bin/koha/mainpage.pl">Home</a> ⁄
        <a href="/cgi-bin/koha/plugins/plugins-home.pl">Plugins</a> ⁄
        <span class="active">AACR2 MARC21 Intellisense + Guardrails</span>
    </div>
</div>
<div class="main container-fluid">
    <div class="row">
        <div class="col-sm-10 col-sm-push-2">
            <main>
                <h1>AACR2 MARC21 Intellisense + Guardrails</h1>

                [% IF settings.last_updated %]
                <div class="alert alert-success">
                    <p><i class="fa fa-check-circle"></i> Last configuration update: [% settings.last_updated %]</p>
                </div>
                [% END %]
                [% IF update_info && update_info.update_available %]
                <div class="alert alert-warning" id="aacr2-update-alert">
                    <p><i class="fa fa-exclamation-circle"></i> New release available: [% update_info.latest_version %] (current [% current_version %]).</p>
                    <p><a href="[% update_info.release_url %]" target="_blank" rel="noopener">View release on GitHub</a></p>
                </div>
                [% END %]

                <div class="row">
                    <div class="col-sm-6">
                        <fieldset class="configuration-section">
                            <legend>Plugin Status</legend>
                            <div class="rows">
                                <div class="status-grid">
                                    <div class="status-item">
                                        <span class="status-label">AACR2 Rules &amp; Punctuation</span>
                                        <span class="status-value">
                                            [% IF settings.enabled %]
                                                <span class="label label-success">Enabled</span>
                                            [% ELSE %]
                                                <span class="label label-danger">Disabled</span>
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">Cataloging Standard</span>
                                        <span class="status-value">AACR2 (MARC21)</span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">Debug Mode</span>
                                        <span class="status-value">
                                            [% IF settings.debug_mode %]
                                                <span class="label label-warning">Enabled</span>
                                            [% ELSE %]
                                                <span class="label label-default">Disabled</span>
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">Interactive Guide</span>
                                        <span class="status-value">
                                            [% IF settings.enable_guide %]
                                                <span class="label label-success">Enabled</span>
                                            [% ELSE %]
                                                <span class="label label-danger">Disabled</span>
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">Internship Mode</span>
                                        <span class="status-value">
                                            [% IF settings.internship_mode %]
                                                <span class="label label-success">Enabled</span>
                                            [% ELSE %]
                                                <span class="label label-danger">Disabled</span>
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">AACR2 Guardrails</span>
                                        <span class="status-value">
                                            [% IF settings.enforce_aacr2_guardrails %]
                                                <span class="label label-success">Enforced</span>
                                            [% ELSE %]
                                                <span class="label label-default">Soft</span>
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">Live Validation</span>
                                        <span class="status-value">
                                            [% IF settings.enable_live_validation %]
                                                <span class="label label-warning">On</span>
                                            [% ELSE %]
                                                <span class="label label-default">Off</span>
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">AI Assist</span>
                                        <span class="status-value">
                                            [% SET ai_mode = (ai_request_mode || 'server') | lower %]
                                            [% IF ai_ready %]
                                                <span class="label label-success">Enabled</span>
                                                [% IF ai_mode == 'direct' %]
                                                    <span class="hint">Direct mode active; browser-local key is required per browser.</span>
                                                [% END %]
                                            [% ELSIF settings.ai_enable && ai_mode == 'direct' %]
                                                <span class="label label-warning">Enabled (browser key required)</span>
                                            [% ELSIF settings.ai_enable %]
                                                <span class="label label-warning">Enabled (key missing)</span>
                                            [% ELSE %]
                                                <span class="label label-danger">Disabled</span>
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">AI Request Mode</span>
                                        <span class="status-value">
                                            [% IF ai_mode == 'direct' %]
                                                <span class="label label-warning">Direct browser</span>
                                            [% ELSE %]
                                                <span class="label label-default">Server (Koha)</span>
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">AI Provider</span>
                                        <span class="status-value">[% ai_provider %]</span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">AI Model</span>
                                        <span class="status-value">[% ai_model || 'Not set' %]</span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">AI Key Status</span>
                                        <span class="status-value"
                                              id="aacr2-tool-ai-key-status"
                                              data-provider="[% IF ai_provider_is_openrouter %]openrouter[% ELSE %]openai[% END %]"
                                              data-mode="[% ai_mode %]"
                                              data-server-configured="[% IF ai_provider_is_openrouter %][% IF openrouter_api_key_set %]1[% ELSE %]0[% END %][% ELSE %][% IF llm_api_key_set %]1[% ELSE %]0[% END %][% END %]">
                                            [% IF ai_mode == 'direct' %]
                                                <span class="label label-default">Browser key unknown</span>
                                            [% ELSIF ai_provider_is_openrouter %]
                                                [% IF openrouter_api_key_set %]
                                                    <span class="label label-success">Configured</span>
                                                [% ELSE %]
                                                    <span class="label label-danger">Missing</span>
                                                [% END %]
                                            [% ELSE %]
                                                [% IF llm_api_key_set %]
                                                    <span class="label label-success">Configured</span>
                                                [% ELSE %]
                                                    <span class="label label-danger">Missing</span>
                                                [% END %]
                                            [% END %]
                                        </span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">Author LinkedIn</span>
                                        <span class="status-value"><a href="[% author_linkedin %]" target="_blank" rel="noopener">[% author_linkedin %]</a></span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-label">Plugin GitHub</span>
                                        <span class="status-value"><a href="[% plugin_repo_url %]" target="_blank" rel="noopener">[% plugin_repo_url %]</a></span>
                                    </div>
                                    [% IF settings.last_updated %]
                                    <div class="status-item">
                                        <span class="status-label">Last Updated</span>
                                        <span class="status-value">[% settings.last_updated %]</span>
                                    </div>
                                    [% END %]
                                </div>
                                <div class="action">
                                    <a href="/cgi-bin/koha/plugins/run.pl?class=[% CLASS %]&method=configure" class="btn btn-primary">
                                        <i class="fa fa-cog"></i> Configure Plugin
                                    </a>
                                    <a href="/cgi-bin/koha/plugins/plugins-home.pl" class="btn btn-default">
                                        <i class="fa fa-arrow-left"></i> Back to Plugins
                                    </a>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <div class="col-sm-6">
                        <fieldset class="configuration-section">
                            <legend>How to Use</legend>
                            <div class="rows">
                                <p>This plugin enforces AACR2 rules and punctuation guardrails across MARC21 bibliographic fields.</p>
                                <span class="hint">Deterministic rules first, AI guidance only with explicit review.</span>
                                <p>Key features:</p>
                                <ul>
                                    <li>AACR2 rules and punctuation guardrails</li>
                                    <li>Inline indicators, ghost text suggestions, and quick fixes</li>
                                    <li>Handles field relationships (e.g., 245$a adjusts based on $b, $c)</li>
                                    <li>Auto-apply toggle or suggestion-only mode</li>
                                    <li>Intern and exclusion lists for controlled training</li>
                                    <li>Live validation that blocks save when violations remain (optional)</li>
                                    <li>Interactive guide for training</li>
                                    <li>AI-driven AACR2 guidance, subjects, and call number assistance</li>
                                </ul>
                                <p>To try it, <a href="/cgi-bin/koha/cataloguing/addbiblio.pl?frameworkcode=">create a new bibliographic record</a>.</p>
                                <span class="hint">Click the link above to start cataloging with automatic punctuation.</span>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <fieldset class="configuration-section">
                    <legend>Supported Fields</legend>
                    <div class="rows">
                        <p>The plugin ships with a baseline AACR2 rule pack and supports custom rule extensions.</p>
                        <span class="hint">See the Coverage Report in configuration for full framework coverage.</span>

                        <h3>Title Fields (245)</h3>
                        <table class="field-table table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Field</th>
                                    <th>Rule / Punctuation</th>
                                    <th>Example</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>245$a</td>
                                    <td>Ends with period (.) if no subsequent subfields; ends with space-colon-space when $b follows</td>
                                    <td><span class="punctuation-field-example">$aThe great Gatsby :</span></td>
                                </tr>
                                <tr>
                                    <td>245$b</td>
                                    <td>Begins without a colon prefix; subtitle follows the colon on 245$a</td>
                                    <td><span class="punctuation-field-example">$aThe great Gatsby :$ba novel</span></td>
                                </tr>
                                <tr>
                                    <td>245$c</td>
                                    <td>Preceded by slash and space ( / )</td>
                                    <td><span class="punctuation-field-example">$aThe great Gatsby /$cF. Scott Fitzgerald.</span></td>
                                </tr>
                            </tbody>
                        </table>

                        <h3>Publication Fields (260/264)</h3>
                        <table class="field-table table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Field</th>
                                    <th>Rule / Punctuation</th>
                                    <th>Example</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>260$a</td>
                                    <td>Ends with colon ( : )</td>
                                    <td><span class="punctuation-field-example">$aNew York :</span></td>
                                </tr>
                                <tr>
                                    <td>260$b</td>
                                    <td>Ends with comma ( , )</td>
                                    <td><span class="punctuation-field-example">$bScribner,</span></td>
                                </tr>
                                <tr>
                                    <td>260$c</td>
                                    <td>Ends with period ( . )</td>
                                    <td><span class="punctuation-field-example">$c1925.</span></td>
                                </tr>
                            </tbody>
                        </table>

                        <h3>Physical Description Fields (300)</h3>
                        <table class="field-table table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Field</th>
                                    <th>Rule / Punctuation</th>
                                    <th>Example</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>300$a</td>
                                    <td>Ends with colon ( : ) if $b follows, period ( . ) otherwise</td>
                                    <td><span class="punctuation-field-example">$a180 pages :</span></td>
                                </tr>
                                <tr>
                                    <td>300$b</td>
                                    <td>Ends with semicolon ( ; )</td>
                                    <td><span class="punctuation-field-example">$billustrations ;</span></td>
                                </tr>
                                <tr>
                                    <td>300$c</td>
                                    <td>Ends with period ( . )</td>
                                    <td><span class="punctuation-field-example">$c23 cm.</span></td>
                                </tr>
                            </tbody>
                        </table>

                        <p>Other supported fields include 1XX/7XX (names), 5XX (notes), 6XX (subjects), 7XX/8XX access points, and linking entries.</p>
                        <span class="hint">Non-AACR2 elements are excluded by default.</span>
                    </div>
                </fieldset>

                <fieldset class="configuration-section">
                    <legend>Troubleshooting</legend>
                    <div class="rows">
                        <p>If you encounter issues with the plugin:</p>
                        <ul>
                            <li>Ensure the plugin is enabled in the configuration settings.</li>
                            <li>Ensure AACR2-only mode matches your cataloging practice.</li>
                            <li>Manually edit fields if automatic punctuation is incorrect.</li>
                            <li>Toggle auto-punctuation off for specific records if needed.</li>
                            <li>Verify your OpenAI API key for AI assist features.</li>
                            <li>Enable debug mode to view console logs for troubleshooting.</li>
                            <li>Contact your system administrator for configuration issues.</li>
                        </ul>
                        <p>If problems persist, check the Koha logs or reinstall the plugin.</p>
                        <span class="hint">Debug mode can be enabled in the configuration settings to provide detailed error information.</span>
                    </div>
                </fieldset>

            </main>
        </div>

        <div class="col-sm-2 col-sm-pull-10">
            <aside>
                [% INCLUDE 'tools-menu.inc' %]
            </aside>
        </div>
    </div>
</div>
<script>
    (function() {
        var statusEl = document.getElementById('aacr2-tool-ai-key-status');
        if (!statusEl) return;
        var mode = (statusEl.getAttribute('data-mode') || 'server').toLowerCase();
        if (mode !== 'direct') return;
        var provider = (statusEl.getAttribute('data-provider') || 'openrouter').toLowerCase();
        var keys = provider === 'openai'
            ? ['aacr2.openai.api_key.obf', 'aacr2.openai.api_key', 'aacr2_openai_api_key']
            : ['aacr2.openrouter.api_key.obf', 'aacr2.openrouter.api_key', 'aacr2_openrouter_api_key'];

        function deobfuscate(raw) {
            if (!raw) return '';
            var decoded = '';
            try {
                decoded = atob(raw);
            } catch (err) {
                return raw;
            }
            var mask = 73;
            var out = '';
            for (var i = 0; i < decoded.length; i++) {
                out += String.fromCharCode(decoded.charCodeAt(i) ^ mask);
            }
            return out;
        }

        function readBrowserKey() {
            var stores = [window.sessionStorage, window.localStorage];
            for (var i = 0; i < stores.length; i++) {
                var store = stores[i];
                if (!store) continue;
                for (var j = 0; j < keys.length; j++) {
                    var key = keys[j];
                    var value = '';
                    try {
                        value = store.getItem(key) || '';
                    } catch (err) {
                        value = '';
                    }
                    if (!value) continue;
                    if (key.indexOf('.obf') !== -1) {
                        value = deobfuscate(value);
                    }
                    if (String(value || '').trim()) return String(value).trim();
                }
            }
            return '';
        }

        function keyFingerprint(raw) {
            if (!raw) return '';
            var hash = 5381;
            for (var i = 0; i < raw.length; i++) {
                hash = ((hash << 5) + hash) + raw.charCodeAt(i);
                hash &= 0xffffffff;
            }
            var hex = (hash >>> 0).toString(16);
            while (hex.length < 8) hex = '0' + hex;
            return 'k' + raw.length + '-' + hex;
        }

        var browserKey = readBrowserKey();
        if (browserKey) {
            statusEl.innerHTML = '<span class="label label-success">Configured (browser ' + keyFingerprint(browserKey) + ')</span>';
        } else {
            statusEl.innerHTML = '<span class="label label-danger">Missing (browser)</span>';
        }
    })();
</script>
<script>
    (function() {
        if (document.getElementById('aacr2-update-alert')) return;
        function normalizeVersionParts(version) {
            var text = (version || '').toString().replace(/^[^0-9]*/, '');
            if (!text) return [0];
            return text.split('.').map(function(part) {
                var cleaned = (part || '').toString().replace(/[^0-9].*$/, '');
                var n = parseInt(cleaned || '0', 10);
                return isFinite(n) ? n : 0;
            });
        }
        function compareVersions(current, latest) {
            var a = normalizeVersionParts(current);
            var b = normalizeVersionParts(latest);
            var max = Math.max(a.length, b.length);
            for (var i = 0; i < max; i++) {
                var av = a[i] || 0;
                var bv = b[i] || 0;
                if (av < bv) return -1;
                if (av > bv) return 1;
            }
            return 0;
        }
        function escapeHtml(value) {
            return (value === undefined || value === null ? '' : String(value))
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;')
                .replace(/"/g, '&quot;')
                .replace(/'/g, '&#39;');
        }
        fetch('[% plugin_releases_api %]', {
            method: 'GET',
            headers: { 'Accept': 'application/vnd.github+json' }
        })
            .then(function(response) {
                if (!response.ok) return null;
                return response.json();
            })
            .then(function(data) {
                if (!data || typeof data !== 'object') return;
                var latest = (data.tag_name || data.name || '').toString().trim();
                if (!latest) return;
                if (compareVersions('[% current_version %]', latest) >= 0) return;
                if (document.getElementById('aacr2-update-alert')) return;
                var releaseUrl = (data.html_url || '[% plugin_repo_url %]').toString();
                var html = ''
                    + '<div class="alert alert-warning" id="aacr2-update-alert">'
                    + '<p><i class="fa fa-exclamation-circle"></i> New release available: '
                    + escapeHtml(latest) + ' (current [% current_version %]).</p>'
                    + '<p><a href="' + escapeHtml(releaseUrl) + '" target="_blank" rel="noopener">View release on GitHub</a></p>'
                    + '</div>';
                var heading = document.querySelector('.main .row .col-sm-10 main h1');
                if (heading && heading.insertAdjacentHTML) {
                    heading.insertAdjacentHTML('afterend', html);
                }
            })
            .catch(function() {
                // Keep UI quiet on release-check network failures.
            });
    })();
</script>
[% INCLUDE 'intranet-bottom.inc' %]
