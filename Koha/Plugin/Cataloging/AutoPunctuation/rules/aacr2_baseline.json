      "examples": [
        { "before": "PS3511.I9 G7.", "after": "PS3511.I9 G7" }
      ]
    },
    {
      "id": "AACR2_PERSONAL_NAME_A_001",
      "tag_pattern": "^(100|700|800)$",
      "subfields": ["a"],
      "severity": "WARNING",
      "rationale": "AACR2 personal name access points typically end with a period when final.",
      "checks": [
        {
          "type": "punctuation",
          "case_mode": "title",
          "suffix_mode": "when_last",
          "suffix_if_last": ".",
          "severity": "WARNING",
          "message": "Add terminal period to personal name when final."
        }
      ],
      "fixes": [
        {
          "label": "Apply AACR2 personal name punctuation",
          "patch": [
            { "op": "replace_subfield", "value_template": "{{expected}}" }
