{
  "type": "object",
  "required": ["request_id", "tag_context"],
  "additionalProperties": false,
  "properties": {
    "request_id": { "type": "string", "maxLength": 64 },
    "tag_context": {
      "type": "object",
      "required": ["tag", "occurrence", "subfields"],
      "additionalProperties": false,
      "properties": {
        "tag": { "type": "string", "maxLength": 3 },
        "ind1": { "type": "string", "maxLength": 1 },
        "ind2": { "type": "string", "maxLength": 1 },
        "occurrence": { "type": "number" },
        "active_subfield": { "type": "string", "maxLength": 1 },
        "subfields": {
          "type": "array",
          "maxItems": 20,
          "items": {
            "type": "object",
            "required": ["code", "value"],
            "additionalProperties": false,
            "properties": {
              "code": { "type": "string", "maxLength": 1 },
              "value": { "type": "string", "maxLength": 2000 }
            }
          }
        }
      }
    },
    "record_context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fields": {
          "type": "array",
          "maxItems": 30,
          "items": {
            "type": "object",
            "required": ["tag", "subfields"],
            "additionalProperties": false,
            "properties": {
              "tag": { "type": "string", "maxLength": 3 },
              "ind1": { "type": "string", "maxLength": 1 },
              "ind2": { "type": "string", "maxLength": 1 },
              "occurrence": { "type": "number" },
              "subfields": {
                "type": "array",
                "maxItems": 30,
                "items": {
                  "type": "object",
                  "required": ["code", "value"],
                  "additionalProperties": false,
                  "properties": {
                    "code": { "type": "string", "maxLength": 1 },
                    "value": { "type": "string", "maxLength": 2000 }
                  }
                }
              }
            }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "punctuation_explain": { "type": "boolean" },
        "subject_guidance": { "type": "boolean" },
        "call_number_guidance": { "type": "boolean" }
      }
    }
  }
}
