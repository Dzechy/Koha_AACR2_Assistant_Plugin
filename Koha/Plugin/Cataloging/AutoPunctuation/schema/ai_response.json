{
  "type": "object",
  "required": ["version", "request_id", "tag_context", "findings", "disclaimer"],
  "additionalProperties": false,
  "properties": {
    "success": { "type": "boolean" },
    "degraded_mode": { "type": "boolean" },
    "extracted_call_number": { "type": "string", "maxLength": 64 },
    "extraction_source": { "type": "string", "maxLength": 32 },
    "raw_text_excerpt": { "type": "string", "maxLength": 400 },
    "assistant_message": { "type": "string", "maxLength": 4000 },
    "confidence_percent": { "type": "number", "minimum": 0, "maximum": 100 },
    "classification": { "type": "string", "maxLength": 64 },
    "subjects": {
      "type": "array",
      "maxItems": 30,
      "items": {
        "type": "object",
        "required": ["tag", "ind1", "ind2", "subfields"],
        "additionalProperties": false,
        "properties": {
          "tag": { "type": "string", "maxLength": 3 },
          "ind1": { "type": "string", "maxLength": 1 },
          "ind2": { "type": "string", "maxLength": 1 },
          "subfields": {
            "type": "object",
            "required": ["a"],
            "additionalProperties": false,
            "properties": {
              "a": { "type": "string", "maxLength": 240 },
              "x": {
                "type": "array",
                "maxItems": 10,
                "items": { "type": "string", "maxLength": 240 }
              },
              "y": {
                "type": "array",
                "maxItems": 10,
                "items": { "type": "string", "maxLength": 240 }
              },
              "z": {
                "type": "array",
                "maxItems": 10,
                "items": { "type": "string", "maxLength": 240 }
              },
              "v": {
                "type": "array",
                "maxItems": 10,
                "items": { "type": "string", "maxLength": 240 }
              }
            }
          }
        }
      }
    },
    "issues": {
      "type": "array",
      "maxItems": 40,
      "items": {
        "type": "object",
        "required": ["severity", "tag", "subfield", "message", "rule_basis", "suggestion"],
        "additionalProperties": false,
        "properties": {
          "severity": { "type": "string", "enum": ["ERROR", "WARNING", "INFO"] },
          "tag": { "type": "string", "maxLength": 3 },
          "subfield": { "type": "string", "maxLength": 1 },
          "message": { "type": "string", "maxLength": 240 },
          "rule_basis": { "type": "string", "maxLength": 240 },
          "suggestion": { "type": "string", "maxLength": 240 },
          "snippet": { "type": "string", "maxLength": 120 },
          "selector": { "type": "string", "maxLength": 120 }
        }
      }
    },
    "errors": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["code", "message"],
        "additionalProperties": false,
        "properties": {
          "code": { "type": "string", "maxLength": 64 },
          "message": { "type": "string", "maxLength": 240 },
          "field": { "type": "string", "maxLength": 32 }
        }
      }
    },
    "debug": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "raw_provider_response": { "type": "string", "maxLength": 20000 },
        "raw_text": { "type": "string", "maxLength": 4000 },
        "parse_error": { "type": "string", "maxLength": 200 }
      }
    },
    "lc_candidates": {
      "type": "array",
      "maxItems": 10,
      "items": { "type": "string", "maxLength": 64 }
    },
    "version": { "type": "string", "maxLength": 10 },
    "request_id": { "type": "string", "maxLength": 64 },
    "tag_context": {
      "type": "object",
      "required": ["tag", "occurrence", "subfields"],
      "additionalProperties": false,
      "properties": {
        "tag": { "type": "string", "maxLength": 3 },
        "ind1": { "type": "string", "maxLength": 1 },
        "ind2": { "type": "string", "maxLength": 1 },
        "occurrence": { "type": "number" },
        "subfields": {
          "type": "array",
          "maxItems": 20,
          "items": {
            "type": "object",
            "required": ["code", "value"],
            "additionalProperties": false,
            "properties": {
              "code": { "type": "string", "maxLength": 1 },
              "value": { "type": "string", "maxLength": 2000 }
            }
          }
        }
      }
    },
    "findings": {
      "type": "array",
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["severity", "code", "message", "rationale", "proposed_fixes", "confidence"],
        "additionalProperties": false,
        "properties": {
          "severity": { "type": "string", "enum": ["ERROR", "WARNING", "INFO"] },
          "code": { "type": "string", "maxLength": 64 },
          "message": { "type": "string", "maxLength": 240 },
          "rationale": { "type": "string", "maxLength": 240 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "proposed_fixes": {
            "type": "array",
            "maxItems": 3,
            "items": {
              "type": "object",
              "required": ["label", "patch"],
              "additionalProperties": false,
              "properties": {
                "label": { "type": "string", "maxLength": 120 },
                "patch": {
                  "type": "array",
                  "maxItems": 3,
                  "items": {
                    "type": "object",
                    "required": ["op", "tag", "occurrence", "subfield", "original_text", "replacement_text", "rationale"],
                    "additionalProperties": false,
                    "properties": {
                      "op": { "type": "string", "enum": ["replace_subfield"] },
                      "tag": { "type": "string", "maxLength": 3 },
                      "occurrence": { "type": "number" },
                      "subfield": { "type": "string", "maxLength": 1 },
                      "original_text": { "type": "string", "maxLength": 2000 },
                      "replacement_text": { "type": "string", "maxLength": 2000 },
                      "rationale": { "type": "string", "maxLength": 120 }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "disclaimer": { "type": "string", "maxLength": 200 }
  }
}
